
// pdfs.json - 所有PDF文件的映射表
// 作用：通过 file_id 统一管理PDF的实际存储位置（Google Drive 或 GitHub）
{
  "files": [
    {
      "file_id": "pdf_001", // 此ID在 chapters.json 和 evidence.json 中引用
      "type": "google_drive", // 可选值: "google_drive" 或 "github"
      "drive_file_id": "你的GoogleDrive文件ID", // 如果是Google Drive，则填写此项
      "github_file_path": "" // 如果是GitHub，则填写仓库内路径，如 "pdfs/xxx.pdf"
    },
    {
      "file_id": "evidence_001",
      "type": "google_drive",
      "drive_file_id": "另一个GoogleDrive文件ID",
      "github_file_path": ""
    }
    // ... 可以继续添加更多PDF文件映射
  ]
}
